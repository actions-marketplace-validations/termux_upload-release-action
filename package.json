{
  "name": "upload-release-action",
  "version": "5.0.0",
  "private": true,
  "description": "Upload files to a GitHub release",
  "main": "lib/main.js",
  "scripts": {
    "watch": "tsc --watch",
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "dist": "ncc build",
    "all": "yarn format && yarn build && yarn dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/svestaro/upload-release-action.git"
  },
  "keywords": [
    "actions",
    "upload",
    "release",
    "assets",
    "asset"
  ],
  "author": "Termux Maintainers",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^2.0.1",
    "@actions/github": "^6.0.1",
    "glob": "^13.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vercel/ncc": "^0.38.4",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  }
}
